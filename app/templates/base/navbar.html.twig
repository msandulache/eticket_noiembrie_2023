{% if app.user %}
    <div class="flex items-center space-x-4 mr-3">
        <a href="/wishlist" class="text-center text-tertiary hover:text-primary transition relative">
            <div class="text-2xl">
                <i class="fa-regular fa-heart"></i>
            </div>
            <div class="text-xs leading-3">Wishlist</div>
            <div
                    class="absolute right-0 -top-1 w-5 h-5 rounded-full flex items-center justify-center bg-primary text-white text-xs">
                {{ wishlist }}
            </div>
        </a>
        <a href="/cart" class="text-center text-tertiary hover:text-primary transition relative">
            <div class="text-2xl">
                <i class="fa-solid fa-bag-shopping"></i>
            </div>
            <div class="text-xs leading-3">Cart</div>
            <div
                    class="absolute -right-3 -top-1 w-5 h-5 rounded-full flex items-center justify-center bg-primary text-white text-xs">
                {{ cart }}
            </div>
        </a>
        <div class="dropdown">
            <a href="#" class="dropbtn text-center text-tertiary hover:text-primary transition relative">
                <div class="text-2xl">
                    <i class="fa-regular fa-user"></i>
                </div>
                <div class="text-xs leading-3">Account</div>
            </a>
            <div class="dropdown-content text-center text-tertiary hover:text-primary transition">
                <a href="{{ path('app_logout') }}">Log out</a>
            </div>
        </div>


    </div>
{% else %}
    <div class="flex items-center space-x-4 mr-3">
    </div>
{% endif %}