{% extends 'base.html.twig' %}

{% block title %}
    eTicket - Contact
{% endblock %}

{% block body %}

    <div class="mx-auto grid max-w-screen-lg justify-left px-4 mt-2">
        <!-- breadcrumb -->
        <div class="container py-4 flex items-center gap-3">
            <a href="/" class="text-primary text-base">
                <i class="fa-solid fa-house"></i>
            </a>
            <span class="text-sm text-gray-400">
            <i class="fa-solid fa-chevron-right"></i>
        </span>
            <p class="text-gray-600 font-medium">Profile</p>
        </div>
        <!-- ./breadcrumb -->


        <div class="container grid grid-cols-12 items-start gap-6 pt-4 pb-16">

            <!-- sidebar -->
            {% include 'common/_account_sidebar.html.twig' %}
            <!-- ./sidebar -->

            <!-- wishlist -->
            <div class="col-span-9 space-y-4">
                {% for movie in movies %}
                    <div class="flex items-center justify-between border gap-6 p-4 border-gray-200 rounded">
                        <div class="w-28">
                            <img src="{{ movie['backdrop_path'] }}" alt="{{  movie['title'] }}" class="w-full">
                        </div>
                        <div class="w-1/3">
                            <h2 class="text-gray-800 text-xl font-medium uppercase">{{  movie['title'] }}</h2>
                            <p class="text-gray-500 text-sm">Availability: <span class="text-green-600">In Stock</span></p>
                        </div>
                        <div class="text-primary text-lg font-semibold">${{  movie['price'] }}</div>
                        <a href="#"
                           class="px-6 py-2 text-center text-sm text-white bg-primary border border-primary rounded hover:bg-transparent hover:text-primary transition uppercase font-roboto font-medium">buy
                            tickets</a>

                        <div class="text-gray-600 cursor-pointer hover:text-primary">
                            <i class="fa-solid fa-trash"></i>
                        </div>
                    </div>
                {% endfor %}



            </div>
            <!-- ./wishlist -->

        </div>
    </div>




{% endblock %}